            android:hint="Elec"/>

        <EditText
            android:id="@+id/water_1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Water"/>




        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Phòng 3.1"/>

        <EditText
            android:id="@+id/elec_3.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Elec"/>

        <EditText
            android:id="@+id/water_3.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Water"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Phòng 1.2"/>

        <EditText
            android:id="@+id/elec_1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Elec"/>

        <EditText
            android:id="@+id/water_1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Water"/>



        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="Phòng 2.2"/>

        <EditText
            android:id="@+id/elec_2.2"
            android:layout_width="match_parent"
